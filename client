#include <sys/types.h>
#include <sys/socket.h>
#include <unistd.h>
#include <arpa/inet.h>
#include <stdlib.h>
#include <stdio.h>
#include <string.h>
#define PORTNUM 9000

int main(void) {
  char buf[BUFSIZ] = {0, };
  struct sockaddr_in sin;
  int sock;
  int serverlen = sizeof(sin);
  char *qu = "quit";
  
  if((sock = socket(AF_INET, SOCK_STREAM, 0)) == -1) {
    perror("socket");
    exit(1);
  }
  
  memset((char *)&sin, '\0', serverlen);
  sin.sin_family = AF_INET;
  sin.sin_port = htons(PORTNUM);
  sin.sin_addr.s_addr = inet_addr("127.0.0.1");
  
  if(connect(sock, (struct sockaddr *)&sin, serverlen)) {
    perror("connect");
    exit(1);
  }
  
  while(1) {
    memset(buf, '\0', BUFSIZ);
    recv(sock, buf, sizeof(buf), 0);
    printf("YOU : %s\n", buf);
    
    if(strncmp(buf, qu, 4) == 0) {
      printf("break\n");
      break;
    }
    
    memset(buf, '\0', BUFSIZ);
    fgets(buf, BUFSIZ, stdin);
    send(sock, buf, strlen(buf) + 1, 0);
    
    if(strncmp(buf, qu, 4) == 0) {
      printf("break\n");
      break;
    }
  }
  close(sock);
  
  return 0;
}
